@model IEnumerable<ControleGlicemia_002.ViewModel.GlicemiaViewModel>

@{
    ViewData["Title"] = "ListagemGlicemias";
}

<h3 class="jumbotron">Listagem de Glicemias Cadastradas</h3>


<div class="accordion" id="accordionExample">
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                Aplicar Filtros...
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
            <div class="accordion-body">

                <div class="container col-md-12">


                    @*  GLICEMIA MEDIDA *@
                    <div class="row">
                        <div class="col-md-1">
                            <label class="control-label col-form-label-sm fw-bold">Condição</label>
                            <input class="form-control form-control-sm" type="number" min="40" max="500" />
                        </div>
                        <div class="col-md-2">  
                            <label class="control-label col-form-label-sm fw-bold">Glicemia Medida</label>
                            <input class="form-control form-control-sm" type="number" min="40" max="500" />
                        </div>
                    </div>
                    <br>
                    @*  DATA DE MEDIÇÃO *@
                    <div class="row">
                        <div class="col-md-1">
                            <label class="control-label col-form-label-sm fw-bold">Condição</label>
                            <input class="form-control form-control-sm" type="number" min="40" max="500" />
                        </div>
                        <div class="col-md-2">
                            <label class="control-label col-form-label-sm fw-bold">Glicemia Medida</label>
                            <input class="form-control form-control-sm" type="number" min="40" max="500" />
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>


<br />
<div class="form-group p-1">
    <a class="btn btn-primary btn-sm" asp-action="CadastraGlicemia">CadastraGlicemia</a>
</div>
<hr />

<table class="table table-striped table-hover fs-6">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GlicemiaMedida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataMedicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraMedicao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAplicacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoraAplicacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoseRegular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoseAjuste)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="fs-6">
                <td>
                    @Html.DisplayFor(modelItem => item.GlicemiaMedida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataMedicao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraMedicao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAplicacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraAplicacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoseRegular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoseAjuste)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observacao)
                </td>
                <td>

                    <div class="btn-group btn-group-sg" role="group" aria-label="Large button group">
                        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.GlicemiaID">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.GlicemiaID">
                            <i class="bi bi-list-columns-reverse"></i>
                        </a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.GlicemiaID">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
